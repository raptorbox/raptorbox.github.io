    }
  },
  "host": "raptor.local",
  "basePath": "/app",
  "tags": [
    {
      "name": "Application",
      "description": "Everything about application"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Application"
        ],
        "summary": "Return user's owned applications and user added to",
        "description": "",
        "operationId": "list",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/PageResponse"
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      },
      "post": {
        "tags": [
          "Application"
        ],
        "summary": "Creates a new application",
        "description": "",
        "operationId": "createApp",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/App"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "401": {
            "description": "User not authorized"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      }
    },
    "/search": {
      "post": {
        "tags": [
          "Application"
        ],
        "summary": "Search application matches the id",
        "description": "",
        "operationId": "searchApp",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": false,
            "schema": {
              "$ref": "#/definitions/DeviceQuery"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/PageResponse"
            }
          },
          "401": {
            "description": "User not authorized"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      }
    },
    "/{appId}": {
      "get": {
        "tags": [
          "Application"
        ],
        "summary": "Return application",
        "description": "",
        "operationId": "readApp",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "appId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/App"
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      },
      "put": {
        "tags": [
          "Application"
        ],
        "summary": "Update an existing application",
        "description": "",
        "operationId": "updateApp",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "appId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/App"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "401": {
            "description": "User not authorized"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      },
      "delete": {
        "tags": [
          "Application"
        ],
        "summary": "Deletes an application",
        "description": "",
        "operationId": "deleteApp",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "appId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "401": {
            "description": "User not authorized"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "Authorization": {
      "type": "apiKey"
    },
    "oauth2": {
      "type": "oauth2",
      "flow": "implicit"
    }
  },
  "definitions": {
    "App": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "domain": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "userId": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "xml": {
            "name": "roles",
            "wrapped": true
          },
          "items": {
            "$ref": "#/definitions/Role"
          }
        },
        "users": {
          "type": "array",
          "xml": {
            "name": "users",
            "wrapped": true
          },
          "items": {
            "$ref": "#/definitions/User"
          }
        }
      },
      "xml": {
        "name": "App"
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "roles": {
          "type": "array",
          "xml": {
            "name": "roles",
            "wrapped": true
          },
          "items": {
            "type": "string"
          }
        }
      },
      "xml": {
        "name": "User"
      }
    },
    "Role": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "permissions": {
          "type": "array",
          "xml": {
            "name": "permission",
            "wrapped": true
          },
          "items": {
            "type": "string"
          }
        }
      },
      "xml": {
        "name": "Role"
      }
    },
    "DeviceQuery": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "deviceId": {
          "type": "string"
        },
        "offset": {
          "type": "integer",
          "format": "int32"
        },
        "limit": {
          "type": "integer",
          "format": "int32"
        },
        "sortBy": {
          "$ref": "#/definitions/SortQuery"
        },
        "id": {
          "$ref": "#/definitions/TextQuery"
        },
        "name": {
          "$ref": "#/definitions/TextQuery"
        },
        "domain": {
          "$ref": "#/definitions/TextQuery"
        },
        "description": {
          "$ref": "#/definitions/TextQuery"
        },
        "properties": {
          "$ref": "#/definitions/MapQuery"
        },
        "empty": {
          "type": "boolean"
        }
      }
    },
    "SortQuery": {
      "type": "object",
      "properties": {
        "direction": {
          "type": "string"
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "MapQuery": {
      "type": "object",
      "properties": {
        "containsKey": {
          "type": "string"
        },
        "containsValue": {
          "type": "object"
        },
        "has": {
          "type": "object",
          "additionalProperties": {
            "type": "object"
          }
        }
      }
    },
    "TextQuery": {
      "type": "object",
      "properties": {
        "startWith": {
          "type": "string"
        },
        "endWith": {
          "type": "string"
        },
        "contains": {
          "type": "string"
        },
        "equals": {
          "type": "string"
        },
        "in": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "match": {
          "type": "string"
        }
      }
    },
    "PageResponse": {
      "type": "object",
      "properties": {
        "first": {
          "type": "boolean"
        },
        "last": {
          "type": "boolean"
        },
        "number": {
          "type": "integer",
          "format": "int32"
        },
        "totalElements": {
          "type": "integer",
          "format": "int32"
        },
        "numberOfElements": {
          "type": "integer",
          "format": "int32"
        },
        "sort": {
          "type": "string"
        },
        "total": {
          "type": "integer",
          "format": "int32"
        },
        "size": {
          "type": "integer",
          "format": "int32"
        },
        "page": {
          "type": "integer",
          "format": "int32"
        },
        "content": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/App"
          }
        }
      }
    }
  }
}